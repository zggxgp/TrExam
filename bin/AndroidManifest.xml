<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hz.trexam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:name="com.hz.trexam.TrExamApplication"
        android:allowBackup="true"
        android:icon="@drawable/tr_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.hz.trexam.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.hz.trexam.MainActivity"></activity>
        
        <activity 
            android:name="com.hz.trexam.SelfLearningActivity" android:launchMode="singleTask"
            ></activity>
        
        <activity 
            android:name="com.hz.trexam.TestAcivity"
            ></activity>
        
        <activity 
            android:name="com.hz.trexam.ErrorActivity"
            ></activity>
        
        <activity 
            android:name="com.hz.trexam.FavoriteActivity"
            ></activity>
    </application>

</manifest>
